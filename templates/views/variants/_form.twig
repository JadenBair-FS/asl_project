<form method="POST" action="/variants/{% if variant.id %}{{ variant.id }}{% endif %}">
    {% if product.id %}
        <input type="hidden" name="id" value="{{ variant.id }}" />
    {% endif %}
    <div>
        <ul>
            <li>
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" value={{ variant.title }}/>
            </li>
            <li>
                <label for="price">Price:</label>
                <input type="number" name="price" id="price" value={{ variant.price }}/>
            </li>
            <li>
                <label for="slug">Slug:</label>
                <input type="text" name="slug" id="slug" value={{ variant.slug }}/>
            </li>
            <li>
                <label for="description">Description:</label>
                <input type="text" name="description" id="description" value={{ variant.description }}/>
            </li>
            <li>
                <label for="inventory">Inventory:</label>
                <input type="number" name="inventory" id="inventory" value={{ variant.inventory }}/>
            </li>
        </ul>  
    </div>
    <div>
        <label for="">Product:</label>
        <select name="productId">
            {% for product in products %}
                <option value="{{ product.id }}" 
                    {% if product.id == variant.productId %}
                        selected
                    {% endif %}
                >{{ product.title }}</option>
            {% endfor %}
        </select>
    </div>
    <div>
        <input type="submit" value="Submit" />
    </div>
</form>