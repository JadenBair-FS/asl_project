<form method="POST" action="/products/{% if product.id %}{{ product.id }}{% endif %}">
    {% if product.id %}
        <input type="hidden" name="id" value="{{ product.id }}" />
    {% endif %}
    <div>
        <li>
            <label for="title">Title:</label>
            <input type="text" name="title" id="name" value={{ product.title }}/>
        </li>
        <li>
            <label for="price">Price:</label>
            <input type="number" name="price" id="price" value={{ product.price }}/>
        </li>
        <li>
            <label for="slug">Slug:</label>
            <input type="text" name="slug" id="slug" value={{ product.slug }}/>
        </li>
        <li>
            <label for="description">Description:</label>
            <input type="text" name="description" id="description" value={{ product.description }}/>
        </li>
        <li>
            <label for="is_published">Is Published?</label>
            <select name="is_published" id="is_published">
                <option value="1" {% if product.is_published == 1 %} selected {% endif %}>Yes</option>
                <option value="0" {% if product.is_published == 0 %} selected {% endif %}>No</option>
            </select>
            
        </li>
    </div>
    <div>
        <input type="submit" value="Submit" />
    </div>
</form>